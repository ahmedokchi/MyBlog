{% extends 'base.html.twig' %}

{% block title %}Liste des Posts
{% endblock %}

{% block body %}

	{% include('navbar.html.twig') %}

	<div class="hero bg-dark text-white py-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h1 class="display-4">Tous les Posts</h1>
					<p class="lead">Découvrez nos dernières publications</p>
				</div>
			</div>
		</div>
	</div>


	<div class="container py-5">
		<div class="row">
			{% for post in posts %}
				<div class="col-md-6 col-lg-4 mb-4">
					<div class="card shadow-sm">
						<img src="{{ asset('images/' ~ post.picture) }}" class="card-img-top" alt="{{ post.title }}">
						<div class="card-body">
							<h5 class="card-title">{{ post.title }}</h5>
							<p class="card-text text-truncate">{{ post.content|raw|slice(0, 100) }}...</p>
							<p class="text-muted small">Publié le
								{{ post.publishedAt|date('d/m/Y') }}</p>
                            <p class="text-muted small">
								{{ post.category.name }}</p>
							<a href="{{ path('app_post', { id: post.id }) }}" class="btn btn-primary btn-sm">Lire la suite</a>
						</div>
					</div>
				</div>

			{% else %}
				<div class="col-12 text-center">
					<p class="text-muted">Aucun post trouvé.</p>
				</div>
			{% endfor %}
		</div>
	</div>
	{% include('footer.html.twig') %}
{% endblock %}
