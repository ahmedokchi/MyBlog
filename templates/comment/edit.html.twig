{% extends 'base.html.twig' %}

{% block title %}
	Éditer le commentaire
{% endblock %}

{% block body %}

	{% include('navbar.html.twig') %}

	<div class="hero bg-dark text-white py-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h1 class="display-4">Modifier votre commentaire</h1>
					<p class="lead">Vous pouvez mettre à jour votre commentaire ci-dessous.</p>
				</div>
			</div>
		</div>
	</div>

	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-lg-6">
				<div class="card shadow-sm">
					<div class="card-body">
						{{ form_start(form) }}
						<div class="mb-3">
							{{ form_row(form.content, {'attr': {'class': 'form-control'}}) }}
						</div>
						<button type="submit" class="btn btn-success">Enregistrer les modifications</button>
						{{ form_end(form) }}
					</div>
				</div>
				<a href="{{ path('app_post', {id: comment.post.id}) }}" class="btn btn-secondary mt-3">Retour au post</a>
			</div>
		</div>
	</div>
	{% include('footer.html.twig') %}

{% endblock %}
